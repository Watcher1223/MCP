{
  "name": "synapse",
  "version": "2.0.0",
  "description": "Real-time cognitive collaboration infrastructure for AI agents",
  "private": true,
  "type": "module",
  "bin": {
    "synapse": "./cli/bin.cjs"
  },
  "scripts": {
    "build": "echo 'Using tsx at runtime'",
    "connect": "tsx cli/src/index.ts",
    "dev": "tsx watch mcp/server-mcpuse.ts",
    "dev:mcp": "tsx watch mcp/server-mcpuse.ts",
    "dev:legacy": "tsx watch mcp/server.ts",
    "dev:gateway": "tsx watch gateway/src/index.ts",
    "dev:hub": "tsx watch hub/src/index.ts",
    "dev:http": "tsx watch http-tools/src/index.ts",
    "dev:observer": "tsx watch observer/src/index.ts",
    "mcp": "tsx mcp/server-mcpuse.ts",
    "start": "tsx mcp/server-mcpuse.ts",
    "start:legacy": "node dist/mcp/server.js",
    "start:hub": "node dist/hub/src/index.js",
    "start:gateway": "node dist/gateway/src/index.js",
    "inspector": "npx @mcp-use/inspector",
    "demo": "tsx demo/run-all.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:legacy": "tsx simulator/src/run-tests.ts",
    "db:init": "psql -f persistence/schema.sql",
    "clean": "rm -rf */dist dist",
    "build:tsc": "node --max-old-space-size=4096 ./node_modules/typescript/bin/tsc -p tsconfig.deploy.json"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.33",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^8.2.2",
    "supertest": "^7.2.2",
    "typescript": "^5.3.2",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@googleapis/calendar": "^14.2.0",
    "@googleapis/gmail": "^16.1.1",
    "@googleapis/oauth2": "^5.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "cors": "^2.8.6",
    "diff": "^5.1.0",
    "express": "^4.18.2",
    "google-auth-library": "^10.5.0",
    "mcp-use": "^1.19.2",
    "node-mocks-http": "^1.17.2",
    "ora": "^9.3.0",
    "pg": "^8.18.0",
    "redis": "^4.7.1",
    "tsx": "^4.6.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yjs": "^13.6.29",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18"
  }
}
